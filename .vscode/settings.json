{
  "emeraldwalk.runonsave": {
    "autoClearConsole": true,
    "commands": [
      {
        "match": "\\.proto$",
        "cmd": "earthly +proto"
      },
      {
        "match": "\\.go$",
        // https://github.com/segmentio/golines
        // Same settings as golangcli-lint lll linter
        "cmd": "golines ${file} -w --max-len=120 --tab-len=1 --ignore-generated"
      }
    ]
  },
  "go.testEnvFile": "${workspaceFolder}/.env.test",
  "go.buildTags": "integration",
  // SQLFluff
  "sqlfluff.config": "${workspaceFolder}/.sqlfluff",
  "sqlfluff.linter.diagnosticSeverity": "warning",
  "sqlfluff.linter.lintEntireProject": true,
  "sqlfluff.format.enabled": true,
  "sqlfluff.format.arguments": [
    "--FIX-EVEN-UNPARSABLE"
  ],
}
